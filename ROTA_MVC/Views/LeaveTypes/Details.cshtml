@model ROTA_MVC.Models.LeaveTypeDto

@{
    ViewData["Title"] = "Leave Type Details";
}

@* --- Page Header --- *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
    <div> @* Action Buttons Area *@
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Leave Types
         </a>
         @* Edit button only makes sense if there's something to edit besides name/desc/approval *@
         <a asp-action="Edit" asp-route-id="@Model?.LeaveTypeId" class="btn btn-sm btn-warning ms-2">
             <i class="bi bi-pencil-fill me-1"></i>Edit Leave Type
         </a>
         <a asp-action="Delete" asp-route-id="@Model?.LeaveTypeId" class="btn btn-sm btn-outline-danger ms-1">
             <i class="bi bi-trash3 me-1"></i>Delete...
         </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card shadow-sm mb-4">
             <div class="card-header">
                 @* Display Type Name prominently in header *@
                 <h4 class="mb-0">@Model.LeaveTypeName</h4>
            </div>
            <div class="card-body p-4">

                <h5 class="text-primary-emphasis mb-3 small text-uppercase fw-semibold">Configuration</h5>
                <dl class="row mb-4"> @* Definition List for details *@
                    <dt class="col-sm-4 col-md-3">Requires Approval</dt>
                    <dd class="col-sm-8 col-md-9">
                        @if(Model.RequiresApproval)
                        {
                            <span class="text-success"><i class="bi bi-check-circle-fill me-1"></i> Yes</span>
                        }
                        else
                        {
                            <span class="text-secondary"><i class="bi bi-x-circle me-1"></i> No</span>
                        }
                    </dd>

                    <dt class="col-sm-4 col-md-3">Description</dt>
                    <dd class="col-sm-8 col-md-9">
                        @if (!string.IsNullOrWhiteSpace(Model.Description)) {
                            @Model.Description
                        } else {
                            <span class="text-muted fst-italic">No description provided.</span>
                        }
                    </dd>
                </dl>

                <h5 class="text-primary-emphasis mb-3 small text-uppercase fw-semibold">System Information</h5>
                 <dl class="row mb-0">
                     <dt class = "col-sm-4 col-md-3">Leave Type ID</dt>
                     <dd class = "col-sm-8 col-md-9 text-muted">@Model.LeaveTypeId</dd>
                     @* Add CreatedAt/UpdatedAt if available in DTO *@
                 </dl>

            </div> @* End Card Body *@
             @* Optional Footer *@
             @* <div class="card-footer bg-light text-muted small"> ... </div> *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@