@model ROTA_MVC.Models.LeaveTypeDto 

@{
    ViewData["Title"] = "Confirm Deletion";
}

@* Page Header *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
     <div>
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Leave Types
         </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7 col-xl-6">
        <div class="card shadow-sm mb-4 border-danger"> @* Danger border *@
             <div class="card-header bg-danger text-white">
                 <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Leave Type</h4>
            </div>
            <div class="card-body p-4">
                <p class="fs-5 text-danger fw-semibold">Are you absolutely sure you want to delete this leave type?</p>
                <p class="text-body-secondary">This action will permanently remove the leave type definition. It can only be performed if **no existing leave requests** are using this type. <strong class="text-danger">This action cannot be undone.</strong></p>

                <hr class="my-3">

                <h5 class="mb-3">Leave Type Details:</h5>
                <dl class="row mb-0">
                     <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.LeaveTypeName)
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.LeaveTypeName)
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.RequiresApproval)
                    </dt>
                    <dd class = "col-sm-8">
                        @(Model.RequiresApproval ? "Yes" : "No")
                    </dd>
                    <dt class = "col-sm-4">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class = "col-sm-8">
                        @(string.IsNullOrWhiteSpace(Model.Description) ? Html.Raw("<span class='text-muted'>N/A</span>") : Model.Description)
                    </dd>
                     <dt class = "col-sm-4">
                        Leave Type ID
                    </dt>
                    <dd class = "col-sm-8">
                        @Html.DisplayFor(model => model.LeaveTypeId)
                    </dd>
                </dl>

                <hr class="my-4">

                @* Form POSTs to DeleteConfirmed action *@
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="LeaveTypeId" />
                    @Html.AntiForgeryToken()

                     <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                         <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                         <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash3-fill me-2"></i>Yes, Delete Leave Type
                         </button>
                    </div>
                </form>

            </div> @* End Card Body *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@