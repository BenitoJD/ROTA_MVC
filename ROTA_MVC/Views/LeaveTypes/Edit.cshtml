@model ROTA_MVC.Models.UpdateLeaveTypeDto 

@{
    ViewData["Title"] = "Edit Leave Type";
    // Get ID from route for Back/Cancel links if needed, although Index is simpler
    var leaveTypeId = ViewContext.RouteData.Values["id"];
}

@* Page Header *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
     <div>
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Leave Types
         </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7 col-xl-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header">
                 <h4 class="mb-0">Update Leave Type Details</h4>
            </div>
            <div class="card-body p-4">
                @* Form posts back to the Edit POST action, ID passed via route *@
                <form asp-action="Edit" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                    @* ID is implicitly passed via the route parameter *@

                    <div class="mb-3">
                        <label asp-for="LeaveTypeName" class="form-label fw-medium">Leave Type Name</label>
                        <input asp-for="LeaveTypeName" class="form-control" placeholder="e.g., Annual Leave, Sick Leave" />
                        <span asp-validation-for="LeaveTypeName" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-medium">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="(Optional) Explain when this leave type is used"></textarea>
                        <span asp-validation-for="Description" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="mb-4 form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="RequiresApproval">
                        <label class="form-check-label fw-medium" asp-for="RequiresApproval">Requires Approval</label>
                        <small class="form-text text-muted d-block">Check this if leave requests using this type need manager/admin approval.</small>
                         <span asp-validation-for="RequiresApproval" class="text-danger small d-block mt-1"></span>
                    </div>

                    <hr class="my-4">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">
                           <i class="bi bi-check-lg me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div> @* End Card Body *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}