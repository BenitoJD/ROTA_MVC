@model ROTA_MVC.Models.ShiftDto 
@{
    ViewData["Title"] = "Confirm Deletion";
}

@* Page Header *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
    <div>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Shift List
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-9 col-lg-8 col-xl-7">
        <div class="card shadow-sm mb-4 border-danger"> @* Danger border *@
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Shift Assignment</h4>
            </div>
            <div class="card-body p-4">
                <p class="fs-5 text-danger fw-semibold">Are you sure you want to delete this shift assignment?</p>
                <p class="text-body-secondary">This action will permanently remove this specific shift record. <strong class="text-danger">This cannot be undone.</strong></p>

                <hr class="my-3">

                <h3 class="h5 mb-3 fw-medium">Shift Details to be Deleted:</h3>
                <div class="p-3 rounded border bg-light mb-4">
                    <dl class="row mb-0 fs-6">
                        <dt class="col-sm-4">Employee</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.EmployeeFullName</dd>

                        <dt class="col-sm-4">Team</dt>
                        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.TeamName) ? Html.Raw("<span class='text-muted'>N/A</span>") : Model.TeamName)</dd>

                        <dt class="col-sm-4">Shift Type</dt>
                        <dd class="col-sm-8">
                            @Model.ShiftTypeName
                            @if(Model.IsOnCall) { <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill ms-2">On Call</span> }
                        </dd>

                        <dt class="col-sm-4">Start Time</dt>
                        <dd class="col-sm-8">@Model.ShiftStartDateTime.ToLocalTime().ToString("f")</dd>

                        <dt class="col-sm-4">End Time</dt>
                        <dd class="col-sm-8">@Model.ShiftEndDateTime.ToLocalTime().ToString("f")</dd>

                        <dt class="col-sm-4">Notes</dt>
                        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.Notes) ? Html.Raw("<span class='text-muted fst-italic'>None</span>") : Model.Notes)</dd>

                        <dt class="col-sm-4">Shift ID</dt>
                        <dd class="col-sm-8 text-muted small">@Model.ShiftId</dd>
                    </dl>
                </div>

                @* Form POSTs to DeleteConfirmed action *@
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ShiftId" />
                    @Html.AntiForgeryToken()

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-lg btn-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-lg btn-danger px-4">
                            <i class="bi bi-trash3-fill me-2"></i>Confirm Deletion
                        </button>
                    </div>
                </form>

            </div> @* End Card Body *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@