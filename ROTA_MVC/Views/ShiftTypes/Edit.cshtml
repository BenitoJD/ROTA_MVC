@model ROTA_MVC.Models.UpdateShiftTypeDto 

@{
    ViewData["Title"] = "Edit Shift Type";
    var shiftTypeId = ViewContext.RouteData.Values["id"]; // Get ID for links
}

@* Page Header *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
     <div>
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Shift Types
         </a>
         <a asp-action="Details" asp-route-id="@shiftTypeId" class="btn btn-sm btn-outline-info ms-2"> @* Link back to Details *@
             <i class="bi bi-info-circle me-1"></i> View Details
         </a>
    </div>
</div>


<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7 col-xl-6">
        <div class="card shadow-sm mb-4">
             <div class="card-header">
                 <h4 class="mb-0"><i class="bi bi-pencil-square me-2 text-primary"></i>Update Shift Type Details</h4>
            </div>
            <div class="card-body p-4">
                @* Form posts back to Edit POST action, ID passed via route *@
                <form asp-action="Edit" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="TypeName" class="form-label fw-medium">Shift Type Name</label>
                        <input asp-for="TypeName" class="form-control" placeholder="e.g., Morning Shift, On-Call Primary" />
                        <span asp-validation-for="TypeName" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-medium">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="(Optional) Describe this shift type"></textarea>
                        <span asp-validation-for="Description" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="mb-4 form-check form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="IsOnCall">
                        <label class="form-check-label fw-medium" asp-for="IsOnCall">Is On Call?</label>
                        <small class="form-text text-muted d-block">Check this if shifts of this type represent an on-call duty.</small>
                         <span asp-validation-for="IsOnCall" class="text-danger small d-block mt-1"></span>
                    </div>

                    <hr class="my-4">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">
                           <i class="bi bi-check-lg me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div> @* End Card Body *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}