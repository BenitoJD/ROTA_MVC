@model IEnumerable<ROTA_MVC.Models.ShiftTypeDto> 

@{
    ViewData["Title"] = "Manage Shift Types";
}

@* --- Page Header --- *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
     <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="Create" class="btn btn-sm btn-primary">
             <i class="bi bi-plus-circle me-1"></i>Create New Shift Type
         </a>
    </div>
</div>

@* --- Feedback Messages --- *@
@if (TempData["ErrorMessage"] != null) { <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">@TempData["ErrorMessage"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div> }

@* --- Shift Types Table Card --- *@
<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Shift Type List</h5>
         @* Optional: Count *@
         @* <small class="text-muted">@Model.Count() Types Defined</small> *@
    </div>
    <div class="table-responsive">
        <table class="table table-hover table-striped table-sm mb-0">
            <thead class="text-body-secondary small text-uppercase">
                <tr>
                    <th scope="col" class="ps-3">Name</th>
                    <th scope="col" class="text-center">Is On Call?</th>
                    <th scope="col">Description</th>
                    <th scope="col" class="text-end pe-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr><td colspan="4" class="text-center text-muted p-4"><i>No shift types defined yet. Click 'Create New' to add one.</i></td></tr>
                }
                @foreach (var item in Model.OrderBy(st => st.TypeName)) // Order alphabetically
                {
                    <tr>
                        <td class="ps-3 align-middle fw-medium">@item.TypeName</td>
                        <td class="text-center align-middle">
                             @if(item.IsOnCall) {
                                 <i class="bi bi-check-circle-fill text-danger" title="Yes, On Call"></i> @* Danger color for On Call check *@
                             } else {
                                 <i class="bi bi-x-circle text-secondary" title="No"></i>
                             }
                        </td>
                        <td class="align-middle text-muted small">
                            @(string.IsNullOrWhiteSpace(item.Description) ? "-" : item.Description)
                        </td>
                        <td class="text-end pe-3 align-middle">
                             <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@item.ShiftTypeId" class="btn btn-outline-info" title="View Details"><i class="bi bi-eye"></i></a>
                                <a asp-action="Edit" asp-route-id="@item.ShiftTypeId" class="btn btn-outline-secondary ms-1" title="Edit"><i class="bi bi-pencil"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.ShiftTypeId" class="btn btn-outline-danger ms-1" title="Delete"><i class="bi bi-trash3"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>@* End table-responsive *@
</div> @* End Card *@