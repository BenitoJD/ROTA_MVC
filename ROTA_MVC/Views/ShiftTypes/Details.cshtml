@model ROTA_MVC.Models.ShiftTypeDto

@{
    ViewData["Title"] = "Shift Type Details";
    bool isAdmin = User.IsInRole("Admin"); // Check if user is admin for button display
}

@* --- Page Header --- *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
    <div> @* Action Buttons Area *@
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Shift Types
         </a>
         @if(isAdmin)
         {
             <a asp-action="Edit" asp-route-id="@Model?.ShiftTypeId" class="btn btn-sm btn-warning ms-2">
                <i class="bi bi-pencil-fill me-1"></i>Edit Shift Type
             </a>
             <a asp-action="Delete" asp-route-id="@Model?.ShiftTypeId" class="btn btn-sm btn-outline-danger ms-1">
                <i class="bi bi-trash3 me-1"></i>Delete...
             </a>
         }
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card shadow-sm mb-4">
             <div class="card-header d-flex justify-content-between align-items-center">
                 <h4 class="mb-0">
                     <i class="bi @(Model.IsOnCall ? "bi-telephone-forward-fill text-danger" : "bi-building text-primary") me-2"></i> @* Icon based on OnCall *@
                     @Model.TypeName
                 </h4>
                  @if(Model.IsOnCall) { <span class="badge bg-danger-subtle text-danger-emphasis rounded-pill fs-6 px-3 py-1">On Call Duty</span> }
            </div>
            <div class="card-body p-4">

                 <h5 class="text-primary-emphasis mb-3 small text-uppercase fw-semibold">Details</h5>
                 <dl class="row mb-0">
                    <dt class="col-sm-4 col-md-3">Name</dt>
                    <dd class="col-sm-8 col-md-9">@Model.TypeName</dd>

                    <dt class="col-sm-4 col-md-3">Is On Call</dt>
                    <dd class="col-sm-8 col-md-9">
                        @if(Model.IsOnCall) {
                            <span class="text-danger fw-medium"><i class="bi bi-check-circle-fill me-1"></i> Yes</span>
                        } else {
                            <span class="text-secondary"><i class="bi bi-x-circle me-1"></i> No</span>
                        }
                    </dd>

                    <dt class="col-sm-4 col-md-3">Description</dt>
                    <dd class="col-sm-8 col-md-9">
                        @if (!string.IsNullOrWhiteSpace(Model.Description)) {
                            @Model.Description
                        } else {
                            <span class="text-muted fst-italic">No description provided.</span>
                        }
                    </dd>

                    <dt class="col-sm-4 col-md-3">System ID</dt>
                    <dd class="col-sm-8 col-md-9 text-muted small">@Model.ShiftTypeId</dd>
                </dl>

            </div> @* End Card Body *@
             @* Optional Footer *@
             @* <div class="card-footer bg-light text-muted small"> ... </div> *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@