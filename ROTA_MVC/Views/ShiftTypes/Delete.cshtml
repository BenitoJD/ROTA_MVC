@model ROTA_MVC.Models.ShiftTypeDto
@{
    ViewData["Title"] = "Confirm Deletion";
}

@* Page Header *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
     <div>
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Shift Types
         </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-9 col-lg-8 col-xl-7">
        <div class="card shadow-sm mb-4 border-danger"> @* Danger border *@
             <div class="card-header bg-danger text-white">
                 <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Shift Type Confirmation</h4>
            </div>
            <div class="card-body p-4">
                <p class="fs-5 text-danger fw-semibold">Are you absolutely sure you want to delete this shift type?</p>
                <p class="text-body-secondary">
                    Deleting this will permanently remove the shift type definition. Any existing shifts currently assigned this type will have their type removed (set to unassigned/null).
                    <strong class="text-danger d-block mt-1">This action cannot be undone.</strong>
                </p>

                <hr class="my-3">

                <h3 class="h5 mb-3 fw-medium">Shift Type Details to be Deleted:</h3>
                <div class="p-3 rounded border bg-light mb-4">
                    <dl class="row mb-0 fs-6">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.TypeName</dd>

                        <dt class="col-sm-4">Is On Call?</dt>
                        <dd class="col-sm-8">
                            @if(Model.IsOnCall) { <span class="text-danger fw-medium"><i class="bi bi-check-circle-fill me-1"></i> Yes</span> }
                            else { <span class="text-secondary"><i class="bi bi-x-circle me-1"></i> No</span> }
                        </dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@(string.IsNullOrWhiteSpace(Model.Description) ? Html.Raw("<span class='text-muted fst-italic'>None</span>") : Model.Description)</dd>

                        <dt class="col-sm-4">Shift Type ID</dt>
                        <dd class="col-sm-8 text-muted small">@Model.ShiftTypeId</dd>
                    </dl>
                </div>

                @* Form POSTs to DeleteConfirmed action *@
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ShiftTypeId" />
                    @Html.AntiForgeryToken()

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                         <a asp-action="Index" class="btn btn-lg btn-secondary px-4">Cancel</a>
                         <button type="submit" class="btn btn-lg btn-danger px-4">
                            <i class="bi bi-trash3-fill me-2"></i>Confirm Deletion
                         </button>
                    </div>
                </form>

            </div> @* End Card Body *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@