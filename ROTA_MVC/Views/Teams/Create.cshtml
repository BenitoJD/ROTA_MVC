@model ROTA_MVC.Models.CreateTeamDto 

@{
    ViewData["Title"] = "Create New Team";
}

@* Page Header *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
     <div>
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Teams List
         </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7 col-xl-6">
        <div class="card shadow-sm mb-4">
             <div class="card-header">
                 <h4 class="mb-0"><i class="bi bi-people-fill me-2 text-primary"></i>Team Details</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="TeamName" class="form-label fw-medium">Team Name</label>
                        <input asp-for="TeamName" class="form-control" placeholder="e.g., Support Alpha, Development Core" />
                        <span asp-validation-for="TeamName" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="mb-4"> @* Increased bottom margin *@
                        <label asp-for="Description" class="form-label fw-medium">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="(Optional) Briefly describe the team's function or scope"></textarea>
                        <span asp-validation-for="Description" class="text-danger small d-block mt-1"></span>
                    </div>

                    <hr class="my-4">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">
                           <i class="bi bi-plus-lg me-2"></i>Create Team
                        </button>
                    </div>
                </form>
            </div> @* End Card Body *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}