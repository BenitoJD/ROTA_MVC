@model ROTA_MVC.Models.TeamDto

@{
    ViewData["Title"] = "Team Details";
    bool isAdmin = User.IsInRole("Admin"); // Check role for buttons
}

@* --- Page Header --- *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
    <div> @* Action Buttons Area *@
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Teams List
         </a>
         @if (isAdmin)
         {
             <a asp-action="Edit" asp-route-id="@Model?.TeamId" class="btn btn-sm btn-warning ms-2">
                 <i class="bi bi-pencil-fill me-1"></i>Edit Team
             </a>
              <a asp-action="Delete" asp-route-id="@Model?.TeamId" class="btn btn-sm btn-outline-danger ms-1">
                 <i class="bi bi-trash3 me-1"></i>Delete...
             </a>
         }
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
        <div class="card shadow-sm mb-4">
             <div class="card-header">
                 <h4 class="mb-0">
                    <i class="bi bi-people-fill me-2 text-primary"></i> @* Team Icon *@
                    @Model.TeamName
                 </h4>
            </div>
            <div class="card-body p-4">

                 <h5 class="text-primary-emphasis mb-3 small text-uppercase fw-semibold">Details</h5>
                 <dl class="row mb-0"> @* Definition List for details *@
                    <dt class="col-sm-4 col-md-3">Team Name</dt>
                    <dd class="col-sm-8 col-md-9">@Model.TeamName</dd>

                    <dt class="col-sm-4 col-md-3">Description</dt>
                    <dd class="col-sm-8 col-md-9">
                         @if (!string.IsNullOrWhiteSpace(Model.Description)) {
                            @Model.Description
                        } else {
                            <span class="text-muted fst-italic">No description provided.</span>
                        }
                    </dd>

                    <dt class="col-sm-4 col-md-3">System ID</dt>
                    <dd class="col-sm-8 col-md-9 text-muted small">@Model.TeamId</dd>

                     @* Add fields like CreatedAt/UpdatedAt if available and useful *@
                     @* <dt class="col-sm-4 col-md-3">Created At</dt>
                     <dd class="col-sm-8 col-md-9">@Model.CreatedAt.ToLocalTime().ToString("g")</dd> *@
                 </dl>

            </div> @* End Card Body *@
            
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@