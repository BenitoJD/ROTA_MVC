@model ROTA_MVC.Models.EmployeeDto 

@{
    ViewData["Title"] = "Confirm Deletion";
}

@* Page Header *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
     <div>
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Employee List
         </a>
    </div>
</div>


<div class="row justify-content-center"> @* Center content *@
    <div class="col-md-8 col-lg-7 col-xl-6"> @* Control width *@
        <div class="card shadow-sm mb-4 border-danger"> @* Add red border for emphasis *@
             <div class="card-header bg-danger text-white"> @* Danger header *@
                 <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Employee Deletion</h4>
            </div>
            <div class="card-body p-4">
                <p class="fs-5 text-danger fw-semibold">Are you absolutely sure you want to delete this employee?</p>
                <p class="text-body-secondary">This action will permanently remove the employee and likely delete their associated User account, Shifts, and Leave Requests due to database relationships. <strong class="text-danger">This cannot be undone.</strong></p>

                <hr class="my-3">

                <h5 class="mb-3">Employee Details:</h5>
                <dl class="row mb-0"> @* Remove bottom margin from dl *@
                    <dt class = "col-sm-4">Full Name</dt>
                    <dd class = "col-sm-8">@Model.FirstName @Model.LastName</dd>

                    <dt class = "col-sm-4">Email</dt>
                    <dd class = "col-sm-8">@(string.IsNullOrWhiteSpace(Model.Email) ? "N/A" : Model.Email)</dd>

                    <dt class = "col-sm-4">Team</dt>
                    <dd class = "col-sm-8">@(string.IsNullOrWhiteSpace(Model.TeamName) ? "Unassigned" : Model.TeamName)</dd>

                     <dt class = "col-sm-4">Status</dt>
                    <dd class = "col-sm-8">@(Model.IsActive ? "Active" : "Inactive")</dd>

                     <dt class = "col-sm-4">Employee ID</dt>
                    <dd class = "col-sm-8">@Model.EmployeeId</dd>
                </dl>

                <hr class="my-4">

                @* Form POSTs to DeleteConfirmed action *@
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="EmployeeId" />
                    @Html.AntiForgeryToken()

                     <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                         <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                         <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-trash3-fill me-2"></i>Yes, Delete Employee
                         </button>
                    </div>
                </form>

            </div> @* End Card Body *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@