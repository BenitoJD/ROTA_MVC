@model ROTA_MVC.Models.UpdateUserStatusDto

@{
    ViewData["Title"] = "Edit Account Status";
    var userId = ViewContext.RouteData.Values["userId"]; // Get ID for links/context
    var userName = ViewBag.UserName ?? "User"; // Get username passed from controller
}

@* Page Header *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
     <div>
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-arrow-left me-1"></i> Back to Users List
         </a>
          <a asp-action="Details" asp-route-userId="@userId" class="btn btn-sm btn-outline-info ms-2">
             <i class="bi bi-info-circle me-1"></i> View User Details
         </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7 col-xl-6">
        <div class="card shadow-sm mb-4">
             <div class="card-header">
                 <h4 class="mb-0"><i class="bi bi-person-fill-gear me-2 text-primary"></i>Set Status for @userName</h4>
            </div>
            <div class="card-body p-4">
                 @* Form posts back to the EditStatus POST action, ID passed via route *@
                <form asp-action="EditStatus" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div> @* Use alert for summary *@
                    @* ID is implicitly passed via the route parameter *@

                    <div class="mb-3 pb-3 border-bottom"> @* Group switch with description *@
                        <div class="form-check form-switch form-switch-lg"> @* Larger switch? (Bootstrap extension maybe needed or custom CSS) *@
                            <input class="form-check-input" type="checkbox" role="switch" asp-for="IsActive">
                            <label class="form-check-label fw-medium fs-5" asp-for="IsActive">Account is Active</label> @* Larger label *@
                            <span asp-validation-for="IsActive" class="text-danger small d-block mt-1"></span>
                        </div>
                        <div class="form-text text-muted ps-1 mt-2"> @* Help text below switch *@
                             Enable this toggle to allow the user to log in. Disable it to prevent access while keeping their record.
                             <strong class="d-block text-warning mt-1"><i class="bi bi-exclamation-triangle me-1"></i>You cannot deactivate your own administrator account.</strong>
                         </div>
                     </div>


                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">
                           <i class="bi bi-check-lg me-2"></i>Update Status
                        </button>
                    </div>
                </form>
            </div> @* End Card Body *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}