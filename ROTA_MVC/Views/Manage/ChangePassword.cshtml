@model ROTA_MVC.Models.ChangePasswordDto 

@{
    ViewData["Title"] = "Change Your Password";
}

@* Page Header *@
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewData["Title"]</h1>
    <div>
         <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
             <i class="bi bi-person-lines-fill me-1"></i> Back to Profile
         </a>
    </div>
</div>


<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7 col-xl-6">
        <div class="card shadow-sm mb-4">
             <div class="card-header">
                 <h4 class="mb-0"><i class="bi bi-key-fill me-2"></i>Update Password</h4>
             </div>
             <div class="card-body p-4">
                <p class="text-body-secondary mb-4">Ensure your account is using a long, random password to stay secure.</p>

                <form asp-action="ChangePassword" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label fw-medium"></label>
                        <input asp-for="CurrentPassword" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your current password" />
                        <span asp-validation-for="CurrentPassword" class="text-danger small d-block mt-1"></span>
                    </div>

                    <hr class="my-4">

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label fw-medium"></label>
                        <input asp-for="NewPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter new password" />
                        <span asp-validation-for="NewPassword" class="text-danger small d-block mt-1"></span>
                        <div class="form-text text-muted small">Minimum 8 characters. Consider using uppercase, lowercase, numbers, and symbols for strength.</div>
                    </div>

                     <div class="mb-4"> @* Increased bottom margin *@
                        <label asp-for="ConfirmNewPassword" class="form-label fw-medium"></label>
                        <input asp-for="ConfirmNewPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm new password" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger small d-block mt-1"></span>
                    </div>


                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-check-lg me-2"></i>Update Password
                        </button>
                    </div>
                </form>
            </div> @* End Card Body *@
        </div> @* End Card *@
    </div> @* End Col *@
</div> @* End Row *@


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}